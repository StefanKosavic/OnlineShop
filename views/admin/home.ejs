    <script>
        function blokiraj1(id){
            let status = 'blokiran';
            $.ajax({
                url:"/admin/home/trgovine/" + status + "/" + id,
                data:{},
                type:"POST",
                beforeSend: function (){
                }
            }).done(function (data){
                window.location.reload();

            });

        }
        function blokiraj2(id){
            let status = 'blokiran';
            $.ajax({
                url:"/admin/home/kupci/" + status + "/" + id,
                data:{},
                type:"POST",
                beforeSend: function (){
                }
            }).done(function (data){
                window.location.reload();

            });

        }

        function obrisi1(id){
            $.ajax({
                url:"/admin/home/trgovine/"+ id,
                data:{},
                type:"delete",
                beforeSend: function (){
                }
            }).done(function (data){
                window.location.reload();

            });

        }

        function obrisi2(id){
            $.ajax({
                url:"/admin/home/kupci/"+ id,
                data:{},
                type:"delete",
                beforeSend: function (){
                }
            }).done(function (data){
                window.location.reload();

            });
        }


    </script>

</head>
<body class="vintageCover">
<ul class="topnav">
    <li><a class="active" href="/admin/home">Pocetna</a></li>
