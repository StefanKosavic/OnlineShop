</ul>

    <div class="container-1">
        <h4>Raspolozive trgovine na sistemu</h4>
        <div class="box-1">
            <%for(let i=0;i<trgovine.length;i++){%>
                <div class="box-1a">
                    <div class="box-1a-1-slika"><img class="slika" src="../images/<%=trgovine[i].slika%>" height="70px" width="100px"></div>
                    <div class="box-1a-1"><span><%=trgovine[i].naziv%></span></div>
                    <div class="box-1a-1"><span><%=trgovine[i].kategorija%></span></div>
                    <div class="box-1a-1"><span><%=trgovine[i].username%></span></div>
                    <div class="box-1a-1"><span><%=trgovine[i].email%></span></div>
                    <div class="box-1a-1"><span><%=trgovine[i].telefon%></span></div>
                    <div class="box-1a-1"><span><%=trgovine[i].grad%></span></div>
                    <div class="box-1a-1"><span> <button type="button" class="btn btn-warning" onclick="blokiraj1('<%=trgovine[i].id_trgovine%>')">Blokiraj</button></span></div>
                    <div class="box-1a-1"><span> <button type="button" class="btn btn-danger" onclick="obrisi1('<%=trgovine[i].id_trgovine%>')">Arhivraj</button></span></div>
                </div>
            <%}%>

        </div>
        <div class="box-1">
            <h4>Raspolozivi kupci na sistemu</h4>
            <div class="box-1">
                <%for(let i=0;i<kupci.length;i++){%>
                <div class="box-1a">
                    <div class="box-1a-1-slika"><img class="slika" src="../images/<%=kupci[i].slika%>" height="120px" width="160px"></div>
                    <div class="box-1a-1"><span><%=kupci[i].ime%></span></div>
                    <div class="box-1a-1"><span><%=kupci[i].prezime%></span></div>
                    <div class="box-1a-1"><span><%=kupci[i].username%></span></div>
                    <div class="box-1a-1"><span><%=kupci[i].email%></span></div>
                    <div class="box-1a-1"><span> <button type="button" class="btn btn-warning" onclick="blokiraj2('<%=kupci[i].id_kupca%>')">Blokiraj</button></span></div>
                    <div class="box-1a-1"><span> <button type="button" class="btn btn-danger" onclick="obrisi2('<%=kupci[i].id_kupca%>')">Arhivraj</button></span></div>
                </div>
                <%}%>

            </div>
        </div>
    </div>

</body>
